<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @trip.name %>
</p>

<p>
  <b>Description:</b>
  <%= @trip.description %>
</p>

<table>
  <tr>
    <td>Destination</td>
  </tr>
  <% @trip.destinations.each do |destination| %>
    <tr>
      <td><%= destination.name %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'New Destination', new_trip_destination_path(@trip) %>
</p>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
