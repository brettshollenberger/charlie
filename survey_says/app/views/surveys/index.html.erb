<%= alert %>
<% if @surveys %>
  <table>
    <thead>
      <th>Survey</th>
      <th>Question 1</th>
      <th>Question 2</th>
      <th>Question 3</th>
    </thead>
    <tbody>
      <% @surveys.each do |survey| %>
        <tr>
          <td>
            <%= survey.name %>
          </td>
          <% for question in survey %>
          <td>
            <% question.body %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
 <p>No surveys yet</p>
<% end %>

<%= link_to "Create Survey", new_survey_path %>
