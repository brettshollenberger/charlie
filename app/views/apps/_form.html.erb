<%= simple_form_for @app  do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, label: 'Application Name' %>
  <%= f.input :description, input_html: { cols: 60, rows: 3 } %>
  <%= f.input :url, label: 'URL' %>
  <%= f.input :codebase_url, label: 'Codebase URL' %>
  <%= f.input :email_visible, label: 'Display my email on the app page' %>

  <%= f.button :submit %>
  <small>* Indicates required field</small>
<%- end -%>
